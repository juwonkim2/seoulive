<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.seoulive.board.course.mapper.commentMapper">

    <!-- 작성   -->
    <insert id="commRegit">
        insert into tbl_comment (WRITER,CONTENT,BOARD_NAME,POST_SEQ)
        values ('yw', #{CONTENT}, 'course',#{POST_SEQ,jdbcType=INTEGER})
    </insert>

    <!--조회-->
    <select id="commList" resultType="org.zerock.seoulive.board.course.domain.commDTO">
        select SEQ, WRITER, CONTENT, WRITE_DATE, BOARD_NAME, POST_SEQ
        from tbl_comment
        where POST_SEQ = #{seq, jdbcType=INTEGER}
          and board_name = 'course'
    </select>

    <!-- 삭제 -->
    <delete id="commDelete" >
        delete from tbl_comment where seq = #{seq}
    </delete>

    <!-- 수정   -->
    <update id="commUpdate" parameterType="org.zerock.seoulive.board.course.domain.commVO">
        update tbl_comment
        set content = #{content},
        modify_date = current_date
        where seq= #{seq}
    </update>

    <!-- 개수 -->
    <select id="commTotal" resultType="Integer">
        select count(seq) from tbl_comment where seq = #{seq}
    </select>


</mapper>